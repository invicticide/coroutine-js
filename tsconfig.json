{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"declaration": true,
		"declarationDir": "src/.types",
		"inlineSourceMap": true,
		"outDir": "dist",
		"removeComments": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"alwaysStrict": true,
		"noEmitOnError": true
	},
	"include": [
		"src/**/*.ts"
	]
}
